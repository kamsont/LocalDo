<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/background_grey" >
    
    <TextView
	    android:id="@+id/active_tasks_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/active_tasks_title"
	    android:background="@color/background_grey"
	    android:textSize="18sp"	  
	    android:layout_marginLeft="21dp"
	    android:layout_marginRight="16dp"
	    android:layout_marginTop="15dp" />
    
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#000000"  	   
	    android:layout_marginLeft="16dp"
	    android:layout_marginRight="16dp"/> 
	       
	<View
	    android:id="@+id/invisible_space"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:visibility="gone"/>
	        
    <ListView
        android:id="@+id/active_tasks_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

	</ListView>
	
	<!-- 
	<Button
	    android:id="@+id/delete_db_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Delete"
	    android:onClick="clearTables" /> 
	 -->
	     
	<View
	    android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:background="#000000"
	    android:layout_marginTop="15dp" 
	    android:layout_marginBottom="20dp"/>
	
	<TextView
	    android:id="@+id/finished_tasks_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/finished_tasks_title"
	    android:background="@color/background_grey"
	    android:textSize="18sp"	  
	    android:layout_marginLeft="21dp"
	    android:layout_marginRight="16dp" />"
	<View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="#000000"  	   
	    android:layout_marginLeft="16dp"
	    android:layout_marginRight="16dp"/>    
		
    <ListView
        android:id="@+id/finished_tasks_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

	</ListView> 

</LinearLayout>